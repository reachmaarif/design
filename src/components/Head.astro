---
import { ClientRouter, fade, slide } from 'astro:transitions';

interface Props {
  meta?: {
    title?: string;
    jobtitle?: string;
    description?: string;
    image?: string | URL;
    type?: string;
    socialLinkedinUrl?: string;
    socialEmailAddress?: string;
  };
}

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site ?? "http://localhost:4321"
);

const {
  title,
  jobtitle,
  description = "Product/Experience designer, strategist. Specializing in designing 1-10 products focusing on MVP, growth, scalability, and continuous refinement through active user testing.",
  image,
  type = "website",
  socialLinkedinUrl,
  socialEmailAddress
} = Astro.props.meta || {};

const imageUrl = image || "/og-image.png";
---
<script src="https://unpkg.com/embla-carousel/embla-carousel.umd.js"></script>

<!-- Primary Meta Tags -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />
<title>{title} | {jobtitle}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<!-- <meta property="og:image" content="/og-image.jpg" /> -->
<meta property="og:image" content={new URL(imageUrl, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<!-- <meta property="twitter:image" content="/og-image.jpg" /> -->
<meta property="twitter:image" content={new URL(imageUrl, Astro.url)} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<ClientRouter />

<!-- JSON-LD Schema -->
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    name: title,
    jobTitle: jobtitle,
    description: description,
    url: Astro.site,
    sameAs: [socialLinkedinUrl, socialEmailAddress].filter(Boolean),
  })}
/>
