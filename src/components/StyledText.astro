---
import { twMerge } from 'tailwind-merge';

interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---


<div class={twMerge("styled-text text-center text-balance text-[#5A4E7C] text-4xl font-bold leading-tight", className)}>
  <slot />
</div>

<style>
  .styled-text :global(p) {
    font-size: inherit !important;
    font-weight: inherit !important;
    color: inherit !important;
    margin-bottom: 0 !important;
  }
</style>
